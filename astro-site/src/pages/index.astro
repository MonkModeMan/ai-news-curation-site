---
// /pages/index.astro
// 🏠 Flipboard風 一覧ページ（1ページ目）

import { getCollection } from 'astro:content';

const PAGE_SIZE = 30;
const allPosts = await getCollection('posts');
const sortedPosts = [...allPosts].sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate));
const paginated = sortedPosts.slice(0, PAGE_SIZE);

const totalPages = Math.ceil(allPosts.length / PAGE_SIZE);
const currentPage = 1;
const sort = "date";
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>最新AIニュースまとめ</title>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <header class="sticky top-0 z-50 bg-gray-100 py-2 border-b border-gray-300">
      <div class="max-w-7xl mx-auto px-4 flex items-center justify-between flex-wrap">
        <div class="flex items-center space-x-3">
          <img src={`${import.meta.env.BASE_URL}assets/logo.png`} alt="ロゴ" class="w-16 h-16 object-contain" />
          <h1 class="text-3xl font-bold text-sky-500">最新AIニュースまとめ</h1>
          <span class="text-gray-600 text-sm ml-2">(ページ {currentPage} / 全{totalPages}ページ中)</span>
        </div>
        <div class="flex items-center space-x-4 mt-2 sm:mt-0 text-sm">
          <span>並び順：</span>
          <a href="/page/date/1" class="text-blue-600 hover:underline">新着順（投稿日が新しい順）</a>
          <span>|</span>
          <a href="/page/source/1" class="text-blue-600 hover:underline">ソース別</a>
          <span>|</span>
          <label class="text-blue-600">記事検索</label>
          <input type="text" placeholder="Search" class="border px-2 py-1 rounded" />
          <a href="/page/date/2" class="text-blue-600 hover:underline">→ 次のページ</a>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 py-6">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {paginated.map(post => (
          <a href={post.data.url} class="block bg-white rounded shadow hover:shadow-lg transition">
            <div class="p-4">
              <h2 class="text-lg font-semibold text-blue-700">{post.data.title}</h2>
              <p class="text-sm text-gray-600 mt-1">{post.data.summary}</p>
              <div class="text-xs text-gray-500 mt-2">{post.data.pubDate}</div>
            </div>
          </a>
        ))}
      </div>
    </main>
  </body>
</html>