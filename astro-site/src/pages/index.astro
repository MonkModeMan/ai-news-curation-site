---
// /pages/index.astro
// 🏠 Flipboard風 一覧ページ（1ページ目）

import { getCollection } from "astro:content";
import ArticleCard from "../components/ArticleCard.astro";
import "../styles/global.css";

const posts = (await getCollection("posts"))
  .filter(p => p.data?.pubDate)
  .sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate))
  .slice(0, 30);

const base = Astro.site?.pathname ?? '';
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>AIニュースまとめ - 最新記事</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-[#f5f8ff] text-gray-800 font-sans" id="top">
    <header class="text-center py-6 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-blue-700">AIニュースまとめ</h1>
      <p class="text-sm text-gray-500 mt-1">最新のAI関連ニュースをお届けします</p>
    </header>

    <main class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 px-4 max-w-screen-xl mx-auto py-8">
      {posts.map(post => {
        const { title, pubDate, source, media, thumbnail, link } = post.data;
        return (
          <ArticleCard
            title={title}
            pubDate={new Date(pubDate).toLocaleDateString("ja-JP")}
            source={media || source || "不明なメディア"}
            thumbnail={thumbnail}
            link={link}
          />
        );
      })}
    </main>
  </body>
</html>