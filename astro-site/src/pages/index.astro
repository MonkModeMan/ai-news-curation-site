---
// /pages/index.astro
// 🏠 Flipboard風 一覧ページ（1ページ目）

import { getCollection } from "astro:content";
import "../styles/global.css";

const posts = (await getCollection("posts"))
  .filter(p => p.data?.pubDate)
  .sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate))
  .slice(0, 30);

const base = Astro.site?.pathname ?? '';
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>AIニュースまとめ - 最新記事</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-[#f5f8ff] text-gray-800 font-sans">
    <header class="sticky top-0 z-50 bg-[#f5f8ff] border-b border-gray-200">
      <div class="flex flex-wrap justify-between items-center px-4 py-4 max-w-screen-xl mx-auto">
        <div class="flex items-center gap-2">
          <span class="text-3xl">🤖</span>
          <h1 class="text-2xl font-bold text-sky-500 whitespace-nowrap">最新AIニュースまとめ</h1>
        </div>
        <div class="flex flex-wrap gap-4 items-center text-sm text-gray-600">
          <div class="flex gap-2">
            <span>並び順：</span>
            <a href="/page/date/1" class="text-blue-700 hover:underline">新着順（投稿日が新しい順）</a>
            <span>|</span>
            <a href="/page/source/1" class="text-blue-700 hover:underline">ソース別</a>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-sm text-gray-600">（ページ 1 / 全XXページ中）</span>
          </div>
          <div class="flex gap-2 items-center">
            <span class="text-blue-700">記事検索</span>
            <input type="text" placeholder="Search" class="border px-2 py-1 rounded" />
          </div>
          <div class="flex gap-3">
            <span class="text-blue-500">← 前のページ</span>
            <span class="text-blue-500">次のページ →</span>
          </div>
        </div>
      </div>
    </header>

    <main class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 px-4 max-w-screen-xl mx-auto py-8">
      {
        posts.map(({ data }) => {
          const image = data.thumbnail || `${base}/assets/default-thumbnail.jpg`;
          const title = data.title;
          const source = data.media || data.source || "不明なメディア";
          const date = new Date(data.pubDate).toLocaleDateString("ja-JP");
          const summary = data.summary || "";
          const url = data.url || "#";

          return (
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              class="block bg-white border border-gray-300 rounded-lg overflow-hidden shadow hover:shadow-md transition"
            >
              <img
                src={image}
                alt="サムネイル"
                class="w-full h-48 object-cover bg-gray-100"
                loading="lazy"
              />
              <div class="p-4 text-left space-y-1">
                <p class="text-green-600 text-xs font-medium">{source}</p>
                <h2 class="text-blue-700 font-semibold text-base line-clamp-2">{title}</h2>
                <p class="text-xs text-green-600">{date}</p>
                <p class="text-sm text-gray-600 line-clamp-3">{summary}</p>
              </div>
            </a>
          );
        })
      }
    </main>

    <footer class="text-center text-sm text-gray-500 py-6 border-t border-gray-200">
      © 2025 raisex, LLC. All rights reserved.
    </footer>
  </body>
</html>