---
// [sort]/[page].astro 一覧ページ：GitHubPages対応
import "../../../styles/global.css";
import { getCollection } from "astro:content";

const PAGE_SIZE = 30;
const { sort, page } = Astro.params;
const currentPage = Number(page || 1);

const allPosts = await getCollection("posts");
const sortedPosts = sort === "source"
  ? [...allPosts].sort((a, b) => a.data.source.localeCompare(b.data.source))
  : [...allPosts].sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate));

const start = (currentPage - 1) * PAGE_SIZE;
const end = currentPage * PAGE_SIZE;
const paginatedPosts = sortedPosts.slice(start, end);

const totalPages = Math.ceil(sortedPosts.length / PAGE_SIZE);
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>AIニュース一覧</title>
  </head>
  <body class="bg-[#f5f8ff] text-gray-800 font-sans px-4 sm:px-6">
    <header class="max-w-5xl mx-auto py-4 flex flex-col sm:flex-row justify-between items-center gap-4">
      <h1 class="text-xl font-bold">AIニュースキュレーション</h1>
      <form method="get" action="/page/date/1" class="w-full sm:w-1/3">
        <input
          type="text"
          name="q"
          placeholder="記事検索..."
          class="w-full p-2 border border-gray-300 rounded"
        />
      </form>
    </header>

    <main class="max-w-5xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 py-4">
      {paginatedPosts.map((post) => {
        const imageUrl = post.data.image ?? "/assets/default-thumbnail.png";
        const title = post.data.title;
        const source = post.data.source;
        const pubDate = new Date(post.data.pubDate).toLocaleDateString("ja-JP");
        const summary = post.data.description?.slice(0, 100) + "...";
        const url = post.data.link;

        return (
          <a
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="block bg-white rounded-xl shadow hover:shadow-md transition duration-300 overflow-hidden"
          >
            <img src={imageUrl} alt={title} class="w-full h-40 object-cover" loading="lazy" />
            <div class="p-4 space-y-2">
              <p class="text-sm text-green-600">{source}</p>
              <h2 class="font-bold text-blue-600 text-base">{title}</h2>
              <p class="text-xs text-green-700">{pubDate}</p>
              <p class="text-sm text-gray-600 line-clamp-3">{summary}</p>
            </div>
          </a>
        );
      })}
    </main>

    <div class="max-w-5xl mx-auto my-6 flex justify-center gap-4">
      {currentPage > 1 && (
        <a href={`/page/${sort}/${currentPage - 1}`} class="text-sm text-blue-600 underline">← 前のページ</a>
      )}
      {currentPage < totalPages && (
        <a href={`/page/${sort}/${currentPage + 1}`} class="text-sm text-blue-600 underline">次のページ →</a>
      )}
      <a href="/" class="text-sm text-blue-600 underline">サイトTOPへ</a>
    </div>

    <footer class="text-center text-xs text-gray-500 mb-4">
      © 2025 raisex, LLC. All rights reserved.
    </footer>
  </body>
</html>
