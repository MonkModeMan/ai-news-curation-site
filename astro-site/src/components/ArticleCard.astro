---
// src/components/ArticleCard.astro

import { format } from 'date-fns';

const { post } = Astro.props;
const { title, description, url, pubDate, source, thumbnail } = post.data;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="block max-w-sm mx-auto bg-white border border-gray-200 rounded-lg shadow hover:shadow-lg transition overflow-hidden">
  <!-- メディア名 -->
  <div class="px-4 pt-4 text-sm text-green-600 font-semibold">
    {source}
  </div>

  <!-- サムネイル画像 -->
  {thumbnail ? (
    <img
      src={thumbnail}
      alt="記事サムネイル"
      class="w-full h-48 object-cover mt-2"
    />
  ) : (
    <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-500 mt-2">
      画像なし
    </div>
  )}

  <!-- タイトル -->
  <div class="px-4 pt-4 font-bold text-blue-600 text-lg leading-snug">
    {title}
  </div>

  <!-- 投稿日 -->
  <div class="px-4 pt-2 text-sm text-green-500">
    {format(new Date(pubDate), "yyyy年MM月dd日")}
  </div>

  <!-- 要約 -->
  <p class="px-4 pt-2 pb-4 text-sm text-gray-700 line-clamp-4">
    {description}
  </p>
</a>
