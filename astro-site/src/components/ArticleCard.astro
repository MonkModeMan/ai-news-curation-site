---
// src/components/ArticleCard.astro
export interface Props {
  title: string;
  pubDate: string;
  description: string;
  media: string;
  thumbnail: string;
  url: string;
}
const { title, pubDate, description, media, thumbnail, url } = Astro.props;
---

<article class="bg-white shadow rounded-lg overflow-hidden border border-gray-200 flex flex-col h-full">
  <!-- ✅ サムネイル画像 -->
  <a href={url} target="_blank" rel="noopener noreferrer" class="block">
    <img
      src={thumbnail}
      alt={title}
      class="w-full h-48 object-cover"
      loading="lazy"
    />
  </a>

  <!-- ✅ 本文：タイトル・媒体名・日付・要約 -->
  <div class="p-3 flex flex-col h-full">
    <!-- ✅ タイトル -->
    <a
      href={url}
      target="_blank"
      rel="noopener noreferrer"
      class="block text-lg font-bold text-blue-600 hover:underline mb-1"
    >
      {title}
    </a>

    <!-- ✅ 媒体名 -->
    <p class="text-base text-green-600 font-semibold mb-1">
      {media}
    </p>

    <!-- ✅ 投稿日 -->
    <p class="text-sm text-black mb-2">
      {new Date(pubDate).toLocaleDateString('ja-JP', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        timeZone: 'Asia/Tokyo',
      })}
    </p>

    <!-- ✅ 要約（最大2行） -->
    <p class="text-gray-700 text-sm line-clamp-2">
      {description}
    </p>
  </div>
</article>