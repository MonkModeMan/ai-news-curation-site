---
// src/components/ArticleCard.astro
// Props
export interface Props {
  title: string;
  pubDate: string;
  description: string;
  media: string;
  thumbnail: string;
  url: string;
}
const { title, pubDate, description, media, thumbnail, url } = Astro.props;
---

<article class="bg-white shadow rounded-lg overflow-hidden border border-gray-200 flex flex-col h-full">
  <!-- ✅ メディア名（上部） -->
  <div class="p-3 text-sm text-green-600 font-semibold border-b border-gray-100">
    {media}
  </div>

  <!-- ✅ サムネイル画像 -->
  <a href={url} target="_blank" rel="noopener noreferrer">
    <img
      src={thumbnail}
      alt={title}
      class="w-full h-48 object-cover"
      loading="lazy"
    />
  </a>

  <!-- ✅ タイトル -->
  <div class="p-3">
    <a
      href={url}
      target="_blank"
      rel="noopener noreferrer"
      class="block text-lg font-bold text-blue-600 hover:underline mb-1"
    >
      {title}
    </a>

    <!-- ✅ 投稿日 -->
    <p class="text-sm text-green-500 mb-2">
      {new Date(pubDate).toLocaleDateString('ja-JP', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        timeZone: 'Asia/Tokyo',
      })}
    </p>

    <!-- ✅ 要約（本文冒頭） -->
    <p class="text-gray-700 text-sm line-clamp-4">
      {description}
    </p>
  </div>
</article>