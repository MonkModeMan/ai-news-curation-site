---
// src/components/ArticleCard.astro
// Props
export interface Props {
  title: string;
  pubDate: string;
  description: string;
  media: string;
  thumbnail: string;
  url: string;
}
const { title, pubDate, description, media, thumbnail, url } = Astro.props;
---

<article class="bg-white shadow rounded-lg overflow-hidden border border-gray-200 flex flex-col h-full">
  <!-- ✅ 媒体名（画像の上に表示） -->
  <div class="text-sm text-green-600 font-semibold px-3 pt-3">
    {media}
  </div>

  <!-- ✅ サムネイル画像 -->
  <a href={url} target="_blank" rel="noopener noreferrer" class="block px-3">
    <img
      src={thumbnail}
      alt={title}
      class="w-full h-48 object-cover rounded-md"
      loading="lazy"
    />
  </a>

  <!-- ✅ タイトルなど -->
  <div class="p-3 flex flex-col h-full">
    <a
      href={url}
      target="_blank"
      rel="noopener noreferrer"
      class="block text-lg font-bold text-blue-600 hover:underline mb-1"
    >
      {title}
    </a>

    <p class="text-sm text-green-500 mb-2">
      {new Date(pubDate).toLocaleDateString('ja-JP', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        timeZone: 'Asia/Tokyo',
      })}
    </p>

    <p class="text-gray-700 text-sm line-clamp-4">
      {description}
    </p>
  </div>
</article>