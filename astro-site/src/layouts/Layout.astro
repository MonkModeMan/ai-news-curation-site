---
// layouts/Layout.astro
const { currentPage, totalPages, sort, q = "", media = "" } = Astro.props;

const queryString = [q && `q=${encodeURIComponent(q)}`, media && `media=${encodeURIComponent(media)}`]
  .filter(Boolean)
  .join("&");
const qs = queryString ? `?${queryString}` : "";
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>最新AIニュースまとめ</title>
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div id="search-overlay" class="fixed inset-0 z-50 bg-white/80 backdrop-blur-sm hidden flex items-center justify-center text-xl font-bold text-red-600">
      🔍 検索中です… 少々お待ちください
    </div>

    <!-- ✅ ヘッダー（2行構成）-->
    <header id="top" class="sticky top-0 z-50 bg-white border-b border-gray-200 px-4 py-3 pt-[48px]">
      <div class="max-w-[1280px] mx-auto">
        <!-- 1行目 -->
        <div class="flex flex-wrap lg:flex-nowrap items-center gap-3">
          <a href={`/ai-news-curation-site/${qs}`} class="flex items-center gap-3 hover:opacity-80">
            <img src="/ai-news-curation-site/assets/ai-icon.png" alt="AIアイコン" class="w-16 h-16" />
            <div class="text-sky-500 text-2xl font-bold whitespace-nowrap">最新AIニュースまとめ</div>
          </a>

          <!-- ✅ PC用検索フォーム -->
          <div class="hidden lg:flex items-center gap-4 ml-auto">
            <!-- ✅ 媒体名検索 -->
            <form method="get" action="/ai-news-curation-site/" class="flex gap-2 items-center">
              <input type="hidden" name="q" value={q} />
              <select name="media" class="text-sm border rounded px-2 py-1 w-48">
                <option value="">媒体名で検索</option>
                <option value="arXiv AI">arXiv AI</option>
                <option value="Hugging Face Blog">Hugging Face Blog</option>
                <option value="OpenAI Blog">OpenAI Blog</option>
                <option value="Google AI Blog">Google AI Blog</option>
                <option value="Microsoft Research Blog">Microsoft Research Blog</option>
                <option value="DeepMind Blog">DeepMind Blog</option>
                <option value="MIT">MIT</option>
                <option value="ITmedia AI">ITmedia AI</option>
                <option value="AI Smily">AI Smily</option>
                <option value="AI Shift">AI Shift</option>
              </select>
              <button type="submit" class="bg-blue-500 text-white text-sm px-3 py-1 rounded hover:bg-blue-600">検索</button>
            </form>

            <!-- ✅ フリーワード検索 -->
            <form method="get" action="/ai-news-curation-site/" class="flex gap-2 items-center">
              <input type="hidden" name="media" value={media} />
              <input type="text" name="q" value={q} placeholder="フリーワード検索" class="text-sm border rounded px-2 py-1 w-60" />
              <button type="submit" class="bg-blue-500 text-white text-sm px-3 py-1 rounded hover:bg-blue-600">検索</button>
            </form>
          </div>
        </div>

        <!-- ✅ モバイル検索フォーム（全幅2段） -->
        <div class="block lg:hidden mt-4 space-y-2">
          <form method="get" action="/ai-news-curation-site/" class="flex flex-col gap-2">
            <input type="hidden" name="q" value={q} />
            <select name="media" class="text-sm border rounded px-2 py-2 w-full">
              <option value="">媒体名で検索</option>
              <option value="arXiv AI">arXiv AI</option>
              <option value="Hugging Face Blog">Hugging Face Blog</option>
              <option value="OpenAI Blog">OpenAI Blog</option>
              <option value="Google AI Blog">Google AI Blog</option>
              <option value="Microsoft Research Blog">Microsoft Research Blog</option>
              <option value="DeepMind Blog">DeepMind Blog</option>
              <option value="MIT">MIT</option>
              <option value="ITmedia AI">ITmedia AI</option>
              <option value="AI Smily">AI Smily</option>
              <option value="AI Shift">AI Shift</option>
            </select>
            <div class="flex gap-2">
              <input type="text" name="q" value={q} placeholder="フリーワード検索" class="text-sm border rounded px-2 py-2 w-full" />
              <button type="submit" class="bg-blue-500 text-white text-sm px-3 py-1 rounded hover:bg-blue-600">検索</button>
            </div>
          </form>
        </div>

        <!-- 2行目：広告エリア -->
        <div class="mt-3 w-full flex justify-center">
          <div class="bg-gray-200 text-center py-2 text-sm w-full rounded">
            🔳 ヘッダー内広告募集中
          </div>
        </div>
      </div>
    </header>

    <!-- ✅ メイン -->
    <main class="max-w-screen-xl mx-auto px-4 py-4 flex flex-col lg:flex-row gap-8">
      <div class="w-full lg:w-3/4">
        <slot />
        <!-- ✅ モバイル広告 -->
        <div class="mt-6 space-y-4 block lg:hidden">
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
        </div>
        <!-- ✅ フッター広告 -->
        <div class="mt-8 w-full flex justify-center">
          <div class="bg-gray-200 text-center py-2 text-sm w-full max-w-[960px] rounded">
            🔳 フッター固定広告募集中
          </div>
        </div>
      </div>

      <!-- ✅ サイド広告 -->
      <aside class="hidden lg:block w-full lg:w-1/4">
        <div class="sticky top-60 space-y-4">
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
        </div>
      </aside>
    </main>

    <!-- ✅ フッター -->
    <footer class="text-center text-xs text-gray-500 py-6">
      {totalPages > 1 && (
        <div class="mb-2 space-x-4">
          {currentPage > 1 && (
            <a href={`/ai-news-curation-site/page/${sort}/${currentPage - 1}${qs}`} class="text-blue-500">
              ← 前のページ
            </a>
          )}
          {currentPage < totalPages && (
            <a href={`/ai-news-curation-site/page/${sort}/${currentPage + 1}${qs}`} class="text-blue-500">
              次のページ →
            </a>
          )}
          <a href={`/ai-news-curation-site/page/${sort}/${currentPage}#top${qs}`} class="text-blue-500">
            ページTOPへ
          </a>
        </div>
      )}
      <div>© 2025 raisex, LLC. All rights reserved.</div>
    </footer>
  </body>
</html>

