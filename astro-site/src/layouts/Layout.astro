---
// layouts/Layout.astro
const { currentPage, totalPages, sort } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>最新AIニュースまとめ</title>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <!-- ✅ 固定ヘッダー（広告付き） -->
    <header class="sticky top-0 z-50 bg-white border-b border-gray-200 px-4 py-4 space-y-4">
      <!-- ✅ 上段：ロゴ・タイトル・ページ情報 -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-2 sm:space-y-0">
        <div class="flex items-center space-x-3">
          <!-- ✅ ロゴ画像（拡大） -->
          <img src="/ai-news-curation-site/assets/ai-icon.png" alt="AIアイコン" class="w-10 h-10" />
          <div class="text-sky-500 text-2xl font-bold">
            最新AIニュースまとめ
          </div>
        </div>
        {typeof currentPage !== 'undefined' && typeof totalPages !== 'undefined' && (
          <div class="text-sm text-gray-600 font-normal ml-1 sm:ml-0">
            （ページ {currentPage} / 全{totalPages}ページ中）
          </div>
        )}
      </div>

      <!-- ✅ 中段：検索フォーム＋ページネーション -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <input
          type="text"
          placeholder="記事検索"
          class="text-sm border rounded px-2 py-1 w-full sm:w-52"
        />
        {typeof currentPage !== 'undefined' && currentPage < totalPages && (
          <a
            href={`/page/${sort}/${currentPage + 1}`}
            class="text-blue-600 text-sm hover:underline text-right"
          >
            → 次のページ
          </a>
        )}
      </div>

      <!-- ✅ 下段：中央寄せ・2/3幅の広告 -->
      <div class="mx-auto max-w-3xl rounded bg-gray-200 text-center py-2 text-sm">
        🔳 ヘッダー内広告募集中
      </div>
    </header>

    <!-- ✅ 本文 + 右広告 -->
    <main class="max-w-6xl mx-auto px-4 py-8 flex flex-col lg:flex-row gap-6">
      <div class="flex-1">
        <!-- 🔻記事スロット -->
        <slot />

        <div class="mt-8 bg-gray-200 text-center py-2">🔳 フッター固定広告募集中</div>
      </div>

      <!-- ✅ スクロール固定の右広告 -->
      <aside class="hidden lg:block w-48">
        <div class="sticky top-24 space-y-4">
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
        </div>
      </aside>
    </main>

    <!-- ✅ フッター -->
    <footer class="text-center text-xs text-gray-500 py-6">
      <a href={`/page/${sort}/${currentPage + 1}`} class="text-blue-500 mr-4">次のページ</a>
      <a href="/" class="text-blue-500">サイトTOPへ</a>
      <div class="mt-2">© 2024 raisex, LLC. All rights reserved.</div>
    </footer>
  </body>
</html>