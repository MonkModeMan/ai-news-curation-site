---
// layouts/Layout.astro
const { currentPage, totalPages, sort } = Astro.props;
const q = Astro.url?.searchParams.get('q') || '';
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>最新AIニュースまとめ</title>
    <script src="/ai-news-curation-site/search.js" defer></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <!-- ✅ 固定ヘッダー -->
    <header id="top" class="sticky top-0 z-50 bg-white border-b border-gray-200 px-4 py-6">
      <div class="max-w-screen-lg mx-auto flex flex-col items-center gap-4">
        <!-- 上段：ロゴ＆タイトル + ページ数 -->
        <div class="flex flex-col items-center">
          <a href="/ai-news-curation-site/" class="flex items-center space-x-3 hover:opacity-80">
            <img src="/ai-news-curation-site/assets/ai-icon.png" alt="AIアイコン" class="w-14 h-14" />
            <div class="text-sky-500 text-4xl font-bold">最新AIニュースまとめ</div>
          </a>
          {currentPage && totalPages && (
            <div class="text-sm text-gray-600 font-normal mt-1">
              （ページ {currentPage} / 全{totalPages}ページ中）
            </div>
          )}
        </div>

        <!-- 中段：検索フォーム -->
        <form action="" method="get" class="w-full sm:w-auto flex gap-2 justify-center">
          <input
            type="text"
            name="q"
            value={q}
            placeholder="記事検索"
            class="text-sm border rounded px-2 py-1 w-full sm:w-72"
          />
          <button
            type="submit"
            class="bg-blue-500 text-white text-sm px-3 py-1 rounded hover:bg-blue-600"
          >
            검색
          </button>
        </form>

        <!-- 下段：ページナビゲーション -->
        <div class="text-sm flex justify-center gap-4 text-blue-600">
          {currentPage && currentPage > 1 && (
            <a href={`/ai-news-curation-site/page/${sort}/${currentPage - 1}`} class="hover:underline">
              ← 前のページ
            </a>
          )}
          {currentPage && totalPages && currentPage < totalPages && (
            <a href={`/ai-news-curation-site/page/${sort}/${currentPage + 1}`} class="hover:underline">
              次のページ →
            </a>
          )}
        </div>

        <!-- ヘッダー内広告 -->
        <div class="w-full rounded bg-gray-200 text-center py-2 text-sm">
          🔳 ヘッダー内広告募集中
        </div>
      </div>
    </header>

    <!-- ✅ 本文と右カラム -->
    <main class="max-w-6xl mx-auto px-4 py-8 pr-52 flex flex-col gap-6">
      <div class="flex-1">
        <slot />

        <!-- モバイル広告 -->
        <div class="mt-6 space-y-4 block lg:hidden">
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
        </div>

        <!-- フッター広告 -->
        <div class="mt-8 bg-gray-200 text-center py-2">🔳 フッター固定広告募集中</div>
      </div>
    </main>

    <!-- ✅ 固定右広告（常に右端に表示） -->
    <aside class="hidden lg:block fixed top-36 right-4 w-48 z-30 space-y-4">
      <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
      <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
      <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
    </aside>

    <!-- ✅ フッター -->
    <footer class="text-center text-xs text-gray-500 py-6">
      <div class="mb-2 space-x-4">
        {currentPage && currentPage > 1 && (
          <a href={`/ai-news-curation-site/page/${sort}/${currentPage - 1}`} class="text-blue-500">
            ← 前のページ
          </a>
        )}
        {currentPage && currentPage < totalPages && (
          <a href={`/ai-news-curation-site/page/${sort}/${currentPage + 1}`} class="text-blue-500">
            次のページ →
          </a>
        )}
        {currentPage && sort ? (
          <a href={`/ai-news-curation-site/page/${sort}/${currentPage}#top`} class="text-blue-500">
            ページTOPへ
          </a>
        ) : (
          <a href="/ai-news-curation-site/#top" class="text-blue-500">ページTOPへ</a>
        )}
      </div>
      <div>© 2024 raisex, LLC. All rights reserved.</div>
    </footer>
  </body>
</html>
