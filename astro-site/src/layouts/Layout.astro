---
// layouts/Layout.astro
const { currentPage, totalPages, sort } = Astro.props;
const q = Astro.url?.searchParams.get("q") || "";
const media = Astro.url?.searchParams.get("media") || "";

// ✅ クエリ文字列を組み立て（ページ遷移リンク用）
const queryString = [q && `q=${encodeURIComponent(q)}`, media && `media=${encodeURIComponent(media)}`]
  .filter(Boolean)
  .join("&");
const qs = queryString ? `?${queryString}` : "";
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>最新AIニュースまとめ</title>
    <script src="/ai-news-curation-site/search.js" defer></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <!-- ✅ ヘッダー -->
    <header id="top" class="sticky top-0 z-50 bg-white border-b border-gray-200 px-4 py-3">
      <div class="max-w-[960px] mx-auto flex flex-col gap-2">
        <!-- 1行目（共通）: ロゴ + タイトル + ページ数 -->
        <div class="flex items-center gap-3">
          <a href={`/ai-news-curation-site/${qs}`} class="flex items-center gap-3 hover:opacity-80">
            <img src="/ai-news-curation-site/assets/ai-icon.png" alt="AIアイコン" class="w-16 h-16" />
            <div class="text-sky-500 text-5xl font-bold">最新AIニュースまとめ</div>
          </a>
          {currentPage && totalPages && (
            <div class="text-sm text-gray-600 ml-2">
              （ページ {currentPage} / 全{totalPages}ページ中）
            </div>
          )}
        </div>

        <!-- 2行目（PC:右寄せ、SP:flexで左右）: ナビ -->
        <div class="flex justify-between sm:justify-end text-sm text-blue-600">
          <div class="flex gap-4">
            {currentPage > 1 && (
              <a href={`/ai-news-curation-site/page/${sort}/${currentPage - 1}${qs}`} class="hover:underline">
                ← 前のページ
              </a>
            )}
            {currentPage < totalPages && (
              <a href={`/ai-news-curation-site/page/${sort}/${currentPage + 1}${qs}`} class="hover:underline">
                次のページ →
              </a>
            )}
          </div>
        </div>
      </div>

      <!-- ✅ 検索フォーム -->
      <div class="mt-3 flex flex-col sm:flex-row justify-center items-center gap-4 px-2 w-full">
        <form method="get" class="flex gap-2 w-full sm:w-auto justify-center">
          <input type="hidden" name="q" value={q} />
          <select name="media" class="text-sm border rounded px-2 py-1 w-full sm:w-60">
            <option value="">媒体名で検索</option>
            <option value="arXiv AI" selected={media === "arXiv AI"}>arXiv AI</option>
            <option value="Hugging Face Blog" selected={media === "Hugging Face Blog"}>Hugging Face Blog</option>
            <option value="OpenAI Blog" selected={media === "OpenAI Blog"}>OpenAI Blog</option>
            <option value="Google AI Blog" selected={media === "Google AI Blog"}>Google AI Blog</option>
            <option value="Microsoft Research Blog" selected={media === "Microsoft Research Blog"}>Microsoft Research Blog</option>
            <option value="DeepMind Blog" selected={media === "DeepMind Blog"}>DeepMind Blog</option>
            <option value="MIT" selected={media === "MIT"}>MIT</option>
            <option value="ITmedia AI" selected={media === "ITmedia AI"}>ITmedia AI</option>
            <option value="AI Smily" selected={media === "AI Smily"}>AI Smily</option>
            <option value="AI Shift" selected={media === "AI Shift"}>AI Shift</option>
          </select>
          <button type="submit" class="bg-blue-500 text-white text-sm px-3 py-1 rounded hover:bg-blue-600">
            検索
          </button>
        </form>

        <form method="get" class="flex gap-2 w-full sm:w-auto justify-center">
          <input type="hidden" name="media" value={media} />
          <input
            type="text"
            name="q"
            value={q}
            placeholder="フリーワード検索"
            class="text-sm border rounded px-2 py-1 w-full sm:w-72"
          />
          <button type="submit" class="bg-blue-500 text-white text-sm px-3 py-1 rounded hover:bg-blue-600">
            検索
          </button>
        </form>
      </div>

      <!-- ✅ ヘッダー広告 -->
      <div class="mt-3 w-full flex justify-center">
        <div class="bg-gray-200 text-center py-2 text-sm w-full max-w-[960px] rounded">
          🔳 ヘッダー内広告募集中
        </div>
      </div>
    </header>

    <main class="max-w-screen-xl mx-auto px-4 py-8 flex flex-col lg:flex-row gap-8">
      <div class="w-full lg:w-3/4">
        <slot />
        <div class="mt-6 space-y-4 block lg:hidden">
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
        </div>
        <div class="mt-8 w-full flex justify-center">
          <div class="bg-gray-200 text-center py-2 text-sm w-full max-w-[960px] rounded">
            🔳 フッター固定広告募集中
          </div>
        </div>
      </div>
      <aside class="hidden lg:block w-full lg:w-1/4">
        <div class="sticky top-48 space-y-4">
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
        </div>
      </aside>
    </main>

    <footer class="text-center text-xs text-gray-500 py-6">
      <div class="mb-2 space-x-4">
        {currentPage > 1 && (
          <a href={`/ai-news-curation-site/page/${sort}/${currentPage - 1}${qs}`} class="text-blue-500">
            ← 前のページ
          </a>
        )}
        {currentPage < totalPages && (
          <a href={`/ai-news-curation-site/page/${sort}/${currentPage + 1}${qs}`} class="text-blue-500">
            次のページ →
          </a>
        )}
        <a href={`/ai-news-curation-site/page/${sort}/${currentPage}#top${qs}`} class="text-blue-500">
          ページTOPへ
        </a>
      </div>
      <div>© 2024 raisex, LLC. All rights reserved.</div>
    </footer>
  </body>
</html>
