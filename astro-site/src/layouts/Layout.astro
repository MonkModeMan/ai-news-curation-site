---
// layouts/Layout.astro

const { currentPage, totalPages, sort } = Astro.props;
const basePath = "/ai-news-curation-site"; // ✅ GitHub Pages対応
const hasPagination = typeof currentPage !== 'undefined' && typeof totalPages !== 'undefined';
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>最新AIニュースまとめ</title>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <!-- ✅ 固定ヘッダー -->
    <header id="top" class="sticky top-0 z-50 bg-white border-b border-gray-200 px-4 py-4 space-y-4">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-2 sm:space-y-0">
        <div class="flex items-center space-x-3">
          <img src={`${basePath}/assets/ai-icon.png`} alt="AIアイコン" class="w-10 h-10" />
          <div class="text-sky-500 text-2xl font-bold">最新AIニュースまとめ</div>
        </div>
        {hasPagination && (
          <div class="text-sm text-gray-600 font-normal ml-1 sm:ml-0">
            （ページ {currentPage} / 全{totalPages}ページ中）
          </div>
        )}
      </div>

      <!-- ✅ 検索フォーム + ページネーション -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <form method="GET" class="w-full sm:w-72">
          <input
            type="text"
            name="q"
            placeholder="記事検索"
            class="text-sm border rounded px-2 py-1 w-full"
          />
        </form>

        {hasPagination && currentPage < totalPages && (
          <a
            href={`${basePath}/page/${sort}/${currentPage + 1}`}
            class="text-blue-600 text-sm hover:underline text-right"
          >
            → 次のページ
          </a>
        )}
      </div>

      <!-- ✅ 広告 -->
      <div class="mx-auto max-w-3xl rounded bg-gray-200 text-center py-2 text-sm">
        🔳 ヘッダー内広告募集中
      </div>
    </header>

    <!-- ✅ 本文 -->
    <main class="max-w-6xl mx-auto px-4 py-8 flex flex-col lg:flex-row gap-6">
      <div class="flex-1">
        <slot />

        <!-- ✅ モバイルバナー -->
        <div class="mt-6 space-y-4 block lg:hidden">
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
        </div>

        <!-- ✅ フッター広告 -->
        <div class="mt-8 bg-gray-200 text-center py-2">🔳 フッター固定広告募集中</div>
      </div>

      <!-- ✅ 右カラム広告 -->
      <aside class="hidden lg:block w-48">
        <div class="sticky top-24 space-y-4">
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
          <div class="bg-gray-300 h-32 flex items-center justify-center">🔳 バナー広告募集中</div>
        </div>
      </aside>
    </main>

    <!-- ✅ フッター -->
    <footer class="text-center text-xs text-gray-500 py-6">
      {hasPagination && currentPage < totalPages && (
        <a href={`${basePath}/page/${sort}/${currentPage + 1}`} class="text-blue-500 mr-4">
          次のページ
        </a>
      )}
      <a href="#top" class="text-blue-500">ページTOPへ</a>
      <div class="mt-2">© 2024 raisex, LLC. All rights reserved.</div>
    </footer>
  </body>
</html>
